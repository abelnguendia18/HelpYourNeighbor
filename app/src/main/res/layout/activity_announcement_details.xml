<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="3dp"
app:cardElevation="5dp"
    android:layout_gravity="center"
android:layout_margin="5dp"
app:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/imageIv_details_announcement"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/start_ico"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/statusTv_details_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/descriptionTv_details_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <TextView
        android:id="@+id/priceTv_details_announcement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="22sp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">
    <ImageButton
        android:id="@+id/btn_call_details_announcement"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_button"
        android:src="@drawable/icon_phone_60"
        />
    <ImageButton
        android:id="@+id/btn_chat_details_announcement"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_chat_60"/>
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>